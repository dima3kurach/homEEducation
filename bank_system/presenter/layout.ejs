<!DOCTYPE html>
<html lang="en">

<head>
   <!-- Required meta tags -->
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>
      <%=title %>
   </title>
   <!-- Bootstrap CSS -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
   <link rel="stylesheet" type="text/css" href="../assets/style.css">
</head>

<body>
   <section class="container-sm mt-5">
      <% if (h1) {%>
         <h1 class="<%=h1.style %>">
            <%=h1.text %>
         </h1>
         <% } %>
            <% if (h2) {%>
               <h2 class="<%=h2.style %>">
                  <%=h2.text %>
               </h2>
               <% } %>
                  <form action="/" method="<%=form.method %>" autocomplete="off" class="<%=form.style %>">
                     <% for(let i=0; i<form.hidden.length; ++i) {%> <input type="hidden" name="<%=form.hidden[i].name%>"
                           value="<%=form.hidden[i].value%>">
                        <% } %>
                           <% if (form.list) {%>
                              <div
                                 class="<% if (form.list.length>1) {%>  row justify-content-between <%} else {%> row justify-content-center <% } %>">
                                 <% form.list.forEach(function(elem){%>
                                    <div class="col-sm-6 p-3">
                                       <div class="border border-warning p-3 rounded-2">
                                          <% Object.entries(elem.unit).forEach(function([key,value]){%>
                                             <p class="my-2 fs-6 fw-bolder text-success"><span
                                                   class="fs-6 fw-normal text-black-50">
                                                   <%=key %>
                                                </span>
                                                <%=value %>
                                             </p>
                                             <% }) %>
                                                <% if (elem.passID) {%>
                                                   <button name="<%=elem.name %>" type="submit" value="<%=elem.value %>"
                                                      class="<%=elem.style %> mt-3"
                                                      onclick="document.querySelector('input[name=passID]').value ='<%=elem.passID%>'">
                                                      <%=elem.text %>
                                                   </button>
                                                   <% } %>
                                                      <% if (elem.cardNum) {%>
                                                         <button name="<%=elem.name %>" type="submit"
                                                            value="<%=elem.value %>" class="<%=elem.style %> mt-3"
                                                            onclick="document.querySelector('input[name=cardNum]').value ='<%=elem.cardNum %>'">
                                                            <%=elem.text %>
                                                         </button>
                                                         <% } %>
                                       </div>
                                    </div>
                                    <% }) %>
                              </div>
                              <% } %>
                                 <% if (form.inputs) {%>
                                    <div class="row justify-content-center">
                                       <% for(let i=0; i<form.inputs.length; ++i) {%>
                                          <div class="<%=form.inputs[i].style %>">
                                             <input
                                                id="<%=form.inputs[i].id ? form.inputs[i].id : form.inputs[i].name%>"
                                                type="<%=form.inputs[i].type %>" name="<%=form.inputs[i].name %>"
                                                class="form-control pt-5 pb-3">
                                             <label
                                                for="<%=form.inputs[i].id ? form.inputs[i].id : form.inputs[i].name%>"
                                                class="mx-2">
                                                <%=form.inputs[i].label %>
                                             </label>
                                          </div>
                                          <%} %>
                                    </div>
                                    <% } %>
                                       <div class="row justify-content-center">
                                          <% for(let i=0; i<form.btns.length; ++i) {%>
                                             <div class="col-sm-6 my-2">
                                                <button <% if (form.btns[i].id) {%> id="<%=form.btns[i].id %>"
                                                      <% } %> name="<%=form.btns[i].name %>" type="submit" value=
                                                            "<%=form.btns[i].value %>"
                                                               class="<%=form.btns[i].style%>"><%=form.btns[i].text %>
                                                </button>
                                             </div>
                                             <%} %>
                                       </div>
                  </form>
   </section>

   <!-- Bootstrap Bundle with Popper -->
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"></script>
   <script src="../assets/scripts.js"></script>

</body>

</html>